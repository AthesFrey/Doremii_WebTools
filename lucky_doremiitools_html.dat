<!-- 载入脚本（记得每次改 JS 就改 ?v= 强刷缓存） -->
<script defer src="/wp-content/uploads/doremii-tools.js?v=lovegod_20251218D"></script>

<!-- 统一居中样式（整组工具宽度 520px） -->
<style>
  /* 固定 520px，同时兼容手机端 */
  .tool-center{
  width: 520px;
  max-width: 100%;
  margin: 0 auto;
  --tool-max-width: 520px; /* 关键：让所有组件跟随 520 */
  }


  /* 标题全部居中：本身不额外顶开（空白由下面“组件+标题”规则负责） */
  .tool-center > h2 { text-align: center; margin: 0 0 10px; }

  /* 关键：每个模块“组件”后面的下一个标题，顶部留出一行空白距离 */
  .tool-center > doremii-password + h2,
  .tool-center > doremii-name + h2,
  .tool-center > doremii-lucky + h2,
  .tool-center > doremii-uuid + h2 {
    margin-top: 24px; /* 想更大就改 28/32 */
  }

  /* 组件标签水平居中 + 占满容器宽度 */
  .tool-center > doremii-password,
  .tool-center > doremii-name,
  .tool-center > doremii-lucky,
  .tool-center > doremii-uuid {
    display: block;
    width: 100%;
    margin-left: auto;
    margin-right: auto;
  }
</style>

<div class="tool-center">

  <!-- 密码生成器 -->
  <h2 style="font-size: 22px; color: #FF8C00;">密码生成器</h2>
  <doremii-password
    accent="#FF8C00"
    length="18"
    history="5"
    style="
      --card-bg: #FFF8DC;
      --card-border: #BC8F8F;
      --text: #0f172a;
      --muted: #64748b;
      --button-bg: #FFA500;
      --button-fg: #000000;
      --result-bg: #FFA500;
      --result-fg: #000000;
      --hist-bg: #FFF8DC;
    "></doremii-password>

  <!-- 姓名生成器 -->
  <h2 style="font-size: 22px; color: #D50068;">姓名生成器</h2>
  <doremii-name
    accent="#D50068"
    src="/wp-content/uploads/forbes.txt"
    v="20250816"
    history="5"
    style="
      --card-bg: #fff7ff;
      --card-border: #f0d5ff;
      --text: #3b0764;
      --muted: #7e22ce;
      --button-bg: #D50068;
      --button-fg: #ffffff;
      --result-bg: #D50068;
      --result-fg: #ffffff;
      --hist-bg: #FFF0F5;
    "></doremii-name>

  <!-- 幸运数字生成器 -->
  <h2 style="font-size: 22px; color: #1E90FF;">幸运数字生成器</h2>
  <doremii-lucky
    accent="#1E90FF"
    src="/wp-content/uploads/luckynums.txt"
    v="20250816"
    length="4"
    history="5"
    style="
      --card-bg: #ADD8E6;
      --card-border: #1E90FF;
      --text: #000000;
      --muted: #4682B4;
      --button-bg: #1E90FF;
      --button-fg: #ffffff;
      --result-bg: #1E90FF;
      --result-fg: #ffffff;
      --hist-bg: #B0E0E6;
    "></doremii-lucky>

  <!-- UUID 生成器 -->
  <h2 style="font-size: 22px; color: #00B997;">UUID 生成器</h2>
  <doremii-uuid
    accent="#00B997"
    history="5"
    style="
      --card-bg: #E8FFF5;
      --card-border: #00B997;
      --text: #0f172a;
      --muted: #0ea5a5;
      --button-bg: #00B997;
      --button-fg: #ffffff;
      --result-bg: #00B997;
      --result-fg: #ffffff;
      --hist-bg: #d1fae5;
    "></doremii-uuid>

</div>
